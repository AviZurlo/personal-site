---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

// Get investments content from collection
const investmentsEntry = await getEntry('investments', 'index');
const { Content } = await investmentsEntry.render();
---

<Layout title="Investments - Avi Zurlo">
  <h1 style="font-size: 14px; font-weight: 400; color: var(--text-tertiary); margin-bottom: 32px; text-transform: uppercase; letter-spacing: 0.1em;">Investments</h1>
  <div class="prose">
    <Content />
  </div>
</Layout>
