---
import { getSession } from '../../lib/auth';
import { listArticles } from '../../lib/content-manager';

export const prerender = false;

// Check authentication
const session = await getSession(Astro.cookies);
if (!session) {
  return Astro.redirect('/admin/login');
}

// Get articles
const articles = await listArticles();

const handleLogout = async () => {
  await fetch('/api/auth/logout', { method: 'POST' });
  window.location.href = '/admin/login';
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Content Editor</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
      background: #fafafa;
      color: #1a1a1a;
      line-height: 1.5;
    }

    .container {
      max-width: 960px;
      margin: 0 auto;
      padding: 48px 24px;
    }

    /* Header */
    .header {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      margin-bottom: 48px;
      padding-bottom: 16px;
      border-bottom: 1px solid #e0e0e0;
    }

    .header h1 {
      font-size: 18px;
      font-weight: 400;
      letter-spacing: 0.02em;
      color: #1a1a1a;
    }

    .logout-btn {
      font-size: 13px;
      color: #666;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0;
      text-decoration: underline;
    }

    .logout-btn:hover {
      color: #1a1a1a;
    }

    /* Notice */
    .notice {
      padding: 12px 16px;
      background: #f5f5f5;
      border-left: 2px solid #1a1a1a;
      font-size: 12px;
      color: #666;
      margin-bottom: 48px;
    }

    /* Section */
    .section {
      margin-bottom: 64px;
    }

    .section-header {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      margin-bottom: 16px;
    }

    .section-title {
      font-size: 14px;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #666;
    }

    /* List */
    .list {
      background: #fff;
      border: 1px solid #e0e0e0;
    }

    .list-item {
      padding: 16px 20px;
      border-bottom: 1px solid #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      transition: background 0.15s ease;
    }

    .list-item:last-child {
      border-bottom: none;
    }

    .list-item:hover {
      background: #fafafa;
    }

    .list-item-content {
      flex: 1;
    }

    .list-item-title {
      font-size: 15px;
      font-weight: 400;
      color: #1a1a1a;
      text-decoration: none;
      display: block;
    }

    .list-item-subtitle {
      font-size: 13px;
      color: #999;
      margin-top: 2px;
    }

    .list-item-actions {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    /* Buttons */
    .btn {
      font-size: 13px;
      font-weight: 400;
      padding: 8px 16px;
      border: 1px solid #1a1a1a;
      background: #fff;
      color: #1a1a1a;
      cursor: pointer;
      transition: all 0.15s ease;
      text-decoration: none;
      display: inline-block;
    }

    .btn:hover {
      background: #1a1a1a;
      color: #fff;
    }

    .btn-text {
      background: none;
      border: none;
      color: #666;
      font-size: 13px;
      cursor: pointer;
      padding: 0;
      text-decoration: underline;
    }

    .btn-text:hover {
      color: #1a1a1a;
    }

    .btn-text.danger {
      color: #999;
    }

    .btn-text.danger:hover {
      color: #1a1a1a;
    }

    /* Count badge */
    .count {
      font-size: 12px;
      color: #999;
      font-weight: 400;
      margin-left: 4px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>Content Editor</h1>
      <button onclick="handleLogout()" class="logout-btn">
        Logout
      </button>
    </div>

    <!-- Notice -->
    <div class="notice">
      Development mode â€” Changes are saved directly to markdown files.
    </div>

    <!-- Pages Section -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Pages</h2>
      </div>
      <div class="list">
        <div class="list-item">
          <div class="list-item-content">
            <a href="/admin/edit/about" class="list-item-title">About</a>
            <div class="list-item-subtitle">Personal information</div>
          </div>
          <div class="list-item-actions">
            <a href="/admin/edit/about" class="btn-text">Edit</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Articles Section -->
    <section class="section">
      <div class="section-header">
        <h2 class="section-title">Articles <span class="count">({articles.length})</span></h2>
        <a href="/admin/create/article" class="btn">New Article</a>
      </div>
      <div class="list">
        {articles.map((slug) => (
          <div class="list-item">
            <div class="list-item-content">
              <a href={`/admin/edit/article/${slug}`} class="list-item-title">{slug}</a>
            </div>
            <div class="list-item-actions">
              <a href={`/admin/edit/article/${slug}`} class="btn-text">Edit</a>
              <button onclick={`deleteArticle('${slug}')`} class="btn-text danger">
                Delete
              </button>
            </div>
          </div>
        ))}
      </div>
    </section>
  </div>

  <script is:inline>
    async function handleLogout() {
      await fetch('/api/auth/logout', { method: 'POST' });
      window.location.href = '/admin/login';
    }

    async function deleteArticle(slug) {
      if (!confirm(`Are you sure you want to delete "${slug}"? This action cannot be undone.`)) {
        return;
      }

      try {
        const response = await fetch(`/api/content/articles/${slug}`, {
          method: 'DELETE',
        });

        if (!response.ok) {
          throw new Error('Failed to delete article');
        }

        // Reload the page to show updated list
        window.location.reload();
      } catch (error) {
        alert('Failed to delete article: ' + error.message);
      }
    }
  </script>
</body>
</html>
