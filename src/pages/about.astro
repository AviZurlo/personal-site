---
import Layout from '../layouts/Layout.astro';
import { readFile } from 'fs/promises';
import { join } from 'path';
import { marked } from 'marked';
import { getSession } from '../lib/auth';

// Read about content
const aboutPath = join(process.cwd(), 'src/content/about.md');
const aboutContent = await readFile(aboutPath, 'utf-8');
const aboutText = aboutContent.replace(/^---[\s\S]*?---\n/, '');

// Split content by h2 headers
const sections = aboutText.split(/^## /m).filter(Boolean);

// Parse each section
const earlyYearsSection = sections.find(s => s.startsWith('EARLY YEARS'));
const cryptoSection = sections.find(s => s.startsWith('CRYPTO'));
const currentlySection = sections.find(s => s.startsWith('CURRENTLY'));

// Remove headers from content and convert to HTML
const earlyYearsText = earlyYearsSection?.replace(/^EARLY YEARS\n/, '') || '';
const cryptoText = cryptoSection?.replace(/^CRYPTO\n/, '') || '';
const currentlyText = currentlySection?.replace(/^CURRENTLY\n/, '') || '';

const earlyYearsHtml = marked(earlyYearsText);
const cryptoHtml = marked(cryptoText);
const currentlyHtml = marked(currentlyText);

// Check if user is authenticated (only in dev mode)
const isAuthenticated = import.meta.env.DEV ? !!(await getSession(Astro.cookies)) : false;
---

<Layout title="About - Avi Zurlo">
  {isAuthenticated && (
    <div style="margin-bottom: 24px;">
      <a
        href="/admin/edit/about"
        style="display: inline-block; padding: 8px 16px; background: #3b82f6; color: white; text-decoration: none; border-radius: 4px; font-size: 14px; border: none;"
      >
        Edit this page
      </a>
    </div>
  )}

  <h2 style="font-size: 14px; font-weight: 400; color: var(--text-tertiary); margin-bottom: 32px; text-transform: uppercase; letter-spacing: 0.1em;">
    EARLY YEARS
  </h2>
  <div class="prose about-content" set:html={earlyYearsHtml} />

  <h2 style="font-size: 14px; font-weight: 400; color: var(--text-tertiary); margin-bottom: 32px; margin-top: 80px; text-transform: uppercase; letter-spacing: 0.1em;">
    CRYPTO
  </h2>
  <div class="prose about-content" set:html={cryptoHtml} />

  <h2 style="font-size: 14px; font-weight: 400; color: var(--text-tertiary); margin-bottom: 32px; margin-top: 80px; text-transform: uppercase; letter-spacing: 0.1em;">
    CURRENTLY
  </h2>
  <div class="prose about-content" set:html={currentlyHtml} />

  <div style="margin: 80px 0 0 0;">
    <h2 style="font-size: 14px; font-weight: 400; color: var(--text-tertiary); margin-bottom: 32px; text-transform: uppercase; letter-spacing: 0.1em;">Interests</h2>

    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 48px; max-width: 650px;">
      <div>
        <div style="width: 100%; aspect-ratio: 1; overflow: hidden; margin-bottom: 16px;">
          <img src="/ironman.jpg" alt="Ironman" style="width: 100%; height: 100%; object-fit: cover; display: block;" />
        </div>
        <p style="font-size: 13px; color: var(--text-tertiary); line-height: 1.5; margin: 0;">
          Three Ironman 70.3s and a marathon. Training for a full Ironman.
        </p>
      </div>

      <div>
        <div style="width: 100%; aspect-ratio: 1; overflow: hidden; margin-bottom: 16px;">
          <img src="/coffee.jpeg" alt="Coffee" style="width: 100%; height: 100%; object-fit: cover; display: block;" />
        </div>
        <p style="font-size: 13px; color: var(--text-tertiary); line-height: 1.5; margin: 0;">
          Ratings for 75+ specialty coffee shops across the world.
        </p>
      </div>

      <div>
        <div style="width: 100%; aspect-ratio: 1; display: flex; align-items: center; justify-content: center; background: var(--bg-secondary); margin-bottom: 16px;">
          <img src="/book.jpg" alt="Book" style="max-width: 85%; max-height: 85%; object-fit: contain;" />
        </div>
        <p style="font-size: 13px; color: var(--text-tertiary); line-height: 1.5; margin: 0;">
          Favorite: <i>When We Cease to Understand the World</i> by Benjam√≠n Labatut
        </p>
      </div>
    </div>
  </div>

  <style>
    .about-content :first-child {
      margin-top: 0;
    }
  </style>
</Layout>
